{
    "name": "zenstruck/uri",
    "description": "Object-oriented wrapper/manipulator for parse_url with additional features.",
    "homepage": "https://github.com/zenstruck/uri",
    "type": "library",
    "license": "MIT",
    "keywords": ["uri", "url", "parser", "mailto", "signed"],
    "authors": [
        {
            "name": "Kevin Bond",
            "email": "kevinbond@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "psr/link": "^1.0|^2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^9.5",
        "rize/uri-template": "^0.3.5",
        "symfony/browser-kit": "^5.4|^6.0",
        "symfony/framework-bundle": "^5.4|^6.0",
        "symfony/phpunit-bridge": "^6.1",
        "symfony/twig-bundle": "^5.4|^6.0",
        "symfony/web-link": "^5.4|^6.0"
    },
    "provide": {
        "psr/link-implementation": "1.0|2.0"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": { "Zenstruck\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Zenstruck\\Uri\\Tests\\": "tests/" }
    },
    "suggest": {
        "symfony/http-kernel": "To create and verify signed URIs",
        "rize/uri-template": "To use TemplateUri"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
